---
interface Props {
  image: string;
  title: string;
  description: string;
  link: string;
}

const { image, title, description, link } = Astro.props;
---

<li class="bg-white p-4 rounded-lg shadow-md space-y-4 flex flex-col items-center justify-between w-full min-w-[280px] max-w-sm">
  <!-- Imagen Responsiva -->
  <img src={image} alt={title} class="w-10 h-10 object-cover mb-4" />

  <!-- Título -->
  <h2 class="text-lg font-semibold text-center truncate">{title}</h2>

  <!-- Descripción -->
  <p class="text-sm text-gray-600 text-center line-clamp-3">{description}</p>

  <!-- Enlace -->
  <a href={link} class="text-blue-600 hover:text-blue-800 text-center mt-2">
    {link}
  </a>
</li>
