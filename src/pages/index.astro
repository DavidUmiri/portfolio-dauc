---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Nav from "../components/Nav.astro";
---

<Layout title="David Umiri">

	<!-- NavegaciÃ³n -->
  <Nav />

  <main class="p-6">
    <h1 class="text-5xl text-white mb-8">Welcome to my Website</h1>

    <!-- Contenedor responsivo para las tarjetas -->
    <ul
      role="list"
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4"
    >
      <Card
        image="/images/github.png"
        title="GitHub"
        description="Explore my personal projects."
        link="https://github.com/DavidUmiri"
      />
      <Card
        image="/images/linkedin.png"
        title="LinkedIn"
        description="Connect with me."
        link="https://linkedin.com/in/davidumiri"
      />
    </ul>
  </main>
</Layout>
